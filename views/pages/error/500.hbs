                  <h3 class="text-uppercase fw-bold m-0">{{ __ "serverErrorMessage" }}</h3>
                  <p class="text-secondary m-0">
                    {{ __ "serverErrorSummary" }}
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
