<div class="container-fluid container-lg">
  <div class="row">
    {{#each streams}}
    <div class="col-6 col-sm-4 mb-3">
      <a title="{{ name }}" href="/player?stream={{ id }}" class="text-decoration-none text-reset">
        <div class="ratio border" style="--bs-aspect-ratio: 141%;">
          <div>
            <div class="d-flex justify-content-center align-items-center h-100">
              <div class="bg-icon app-icon"></div>
            </div>
          </div>
        </div>

        <div class="text-trunc-line-2 text-break">
          {{ name }}
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>